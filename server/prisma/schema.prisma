generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     String      @id               @default(uuid())
  name        String
  email       String      @unique
  password    String 
  createdAt   DateTime    @default(now())
  updatedAt   DateTime?
  deleteAt    DateTime?

  @@map("users")
}

model Chat {
  chat_id   String      @id               @default(uuid())
  members   String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chats")
}
